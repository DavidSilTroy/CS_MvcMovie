@{
    ViewData["Title"] = "Welcome GET method";
}

<ul>
    @for (int i = 0; i < (int)ViewData["NumTimes"]; i++)
   {
    <li>
        @ViewData["Message"]
    </li>
   }
</ul>

<ul>
    <li>
        Year: 
        @DateTime.Now.Year
    </li>
    <li>
        Month: 
        @DateTime.Now.Month
    </li>
    <li>
        Day: 
        @DateTime.Now.Day
    </li>
    <li>
        Hour: 
        @DateTime.Now.Hour
    </li>
    <li>
        Minte: 
        @DateTime.Now.Minute
    </li>
    <li>
        Last week this time: 
        @(DateTime.Now - TimeSpan.FromDays(7))
    </li>

</ul>